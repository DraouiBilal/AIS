// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  createdAt   DateTime @default(now())
  email       String   @unique
  fullname    String
  username    String   @unique
  password    String
  verifyToken String?
  verifiedAt  DateTime?
  avatar      String?
}
